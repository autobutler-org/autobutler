package unsupported_viewer

templ Component(filePath string) {
	<div>
		<div>
			<p>
				This file type cannot yet be viewed directly
			</p>
		</div>
		<div>
			<a href={ "/files/" + filePath } class="text-white bg-blue-600 hover:bg-blue-700 px-8 py-3 rounded-lg transition-colors duration-200 flex items-center space-x-2 mx-auto mt-4 w-fit" download>
				Download file
			</a>
		</div>
	</div>
}

package views

import (
	"autobutler/internal/server/ui/components/body"
	cal "autobutler/internal/server/ui/components/calendar"
	"autobutler/internal/server/ui/components/footer"
	"autobutler/internal/server/ui/components/header"
	"autobutler/internal/server/ui/components/topnav"
	"autobutler/internal/server/ui/types"
	"autobutler/pkg/calendar"
)

templ Calendar(pageState types.PageState) {
	{{ pageState.CurrentPageName = types.PageCalendar }}
	<!DOCTYPE html>
	<html lang="en">
		@header.Component()
		@topnav.Component(pageState)
		@body.Component() {
			@cal.Component(calendar.CalendarViewMonth)
		}
		@footer.Component()
	</html>
}

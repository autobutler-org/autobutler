package views

import (
"time"
"github.com/exokomodo/exoflow/autobutler/backend/ui/components"
"github.com/exokomodo/exoflow/autobutler/backend/ui/components/chat"
"github.com/exokomodo/exoflow/autobutler/backend/internal/llm"
)

templ Chat() {
    <!DOCTYPE html>
    <html lang="en">
        @components.Header()
        @components.Body() {
            @chat.Chat(
                []llm.ChatMessage{
                    {Role: llm.ChatRoleSystem, Content: "Welcome to the Autobutler!", Timestamp: llm.GetTimestamp(time.Now())},
                },
            )
        }
        @components.Footer()
    </html>
}
